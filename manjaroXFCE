yaourt -S get_iplayer-git atomicparsley-largefile-hg perl-mp3-info perl-mp3-tag flvstreamer id3v2 --noconfirm
yaourt -S handbrake filebot python2-pillow xsane xsane-gimp sc-controller-git libzen puddletag tk --noconfirm
yaourt -S deluge backintime --noconfirm
yaourt -S k3b cdrdao emovix transcode opusfile dvd+rw-tools --noconfirm
sudo pacman -S wine winetricks playonlinux --noconfirm
yaourt -S lutris python-evdev python-pyinotify --noconfirm
yaourt -S xfce-theme-greybird xfce-theme-blackbird --noconfirm
